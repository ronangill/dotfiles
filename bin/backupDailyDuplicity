#!/bin/bash

PERIOD="daily"
MODE="duplicity"
SRC="/"
DEST="rsync://diskstation//volume1/Backups/$(hostname -s)-${MODE}-${PERIOD}"

echo "daily backup: Backing up [${SOURCE}] to [${DEST}]"
duplicity --no-encryption --full-if-older-than 7D  \
          --include  /etc \
          --include  /home \
          --include  /boot \
          --include  /data/company \
          --include  /data/personal \
          --exclude  /home/rgill/bin \
          --exclude  /home/rgill/src \
          --exclude  /home/rgill/Downloads \
          --exclude  /home/rgill/Steam \
          --exclude  '**'  \
          ${SRC} ${DEST}
# duplicity remove-all-but-n-full 6 --force ${DEST}

